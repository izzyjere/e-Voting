<AuthorizeView>
    <Authorized>
        <Animate Animation="Animations.FlipUp" Duration="TimeSpan.FromSeconds(0.5)">
            <MudCard Elevation="0" Square="true" Class="@Class" Style="@Style">
                <MudCardHeader>
                    <CardHeaderAvatar>
                        <MudAvatar Image="@context.User.GetProfilePicture()" />
                    </CardHeaderAvatar>
                    <CardHeaderContent>
                        <MudText Typo="Typo.body2">Jonny Larsson</MudText>
                        <MudText Typo="Typo.caption">@context.User.GetRole()</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
            </MudCard>
        </Animate>
    </Authorized>
</AuthorizeView>


@code {
    [Parameter] public string Class { get; set; }
    [Parameter] public string Style { get; set; }

}