<Animate Animation="Animations.FlipUp" Duration="TimeSpan.FromSeconds(0.5)" >
<MudCard Elevation="0" Square="true" Class="@Class" Style="@Style">
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar Image="images/clarence.png" />
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.body2">Clarence Simukanzye</MudText>
            <MudText Typo="Typo.caption">Developer</MudText>
        </CardHeaderContent>
    </MudCardHeader>
</MudCard>
</Animate>

@code {
    [Parameter] public string Class { get; set; }
    [Parameter] public string Style { get; set; }
}