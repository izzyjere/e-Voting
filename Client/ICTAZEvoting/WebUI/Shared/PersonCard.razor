
<AuthorizeView>
    <Authorized>
        <MudCard Elevation="0" Square="true" Class="@Class" Style="@Style">
            <MudCardHeader>
                <CardHeaderAvatar>
                    <MudAvatar Image="@(fileService.GetFileUrl(Profile.ProfilePicture))" />
                </CardHeaderAvatar>
                <CardHeaderContent>
                    <MudText Typo="Typo.body2">@Profile.FullName</MudText>
                    <MudText Typo="Typo.caption">@context.User.GetRole()</MudText>
                </CardHeaderContent>
            </MudCardHeader>
        </MudCard>
    </Authorized>
</AuthorizeView>


@code {
    [Parameter] public string Class { get; set; }
    [Parameter] public string Style { get; set; }
    [Parameter] public UserProfileResponse Profile { get; set; }

}