<MudDialog>
    <DialogContent>
        <MudForm>
           <MudTextField InputType="@inputType" @bind-Value="@model" FullWidth="true" Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Lock" Variant="Variant.Outlined" Label="Secrete Key"/>
        </MudForm>
        <MudCheckBox Value="false" CheckedChanged="(e)=>OnShowKey(e)" Size="Size.Small" Class="mt-3" T="bool" Label="Show secrete key"/>
        @if(isLoading)
        {
            <MudProgressLinear Class="mt-2" Color="Color.Warning" Indeterminate="true"/>
        }
    </DialogContent>
    <DialogActions>       
        <MudButton OnClick="Submit" StartIcon="@Icons.Material.Filled.LockOpen" Color="Color.Success">Vote</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance Dialog { get; set; }    
    string model;
    bool isLoading;
    InputType inputType = InputType.Password;
    void Cancel() => Dialog.Cancel();
    void Submit()
    {    
        if (string.IsNullOrEmpty(model))
        {
            snackBar.Add("Enter your key before continuing.", Severity.Error);
            return;
        }
        else
        {
            isLoading = true;
            StateHasChanged();
            Dialog.Close(DialogResult.Ok(model));
        }
    }
    void OnShowKey(bool show)
    {
        InputType inputType = show?InputType.Text:InputType.Password;
        StateHasChanged();
    }
}
